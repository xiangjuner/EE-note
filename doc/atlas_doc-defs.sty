\newcommand{\BibTeX}{\textsc{Bib\TeX}}
\newcommand{\File}[1]{\texttt{#1}\xspace}
\newcommand{\Macro}[1]{\texttt{\textbackslash #1}\xspace}
\newcommand{\Option}[1]{\textsf{#1}\xspace}
\newcommand{\Package}[1]{\texttt{#1}\xspace}
\newcommand*{\OptionTFT}{true\textbar \normalfont{false}}
\newcommand*{\OptionTFF}{\normalfont{true}\textbar false}

% Use tcolorbox for listings
\RequirePackage[listings, breakable]{tcolorbox}
\tcbset{colframe=Blue, colback=Azure}
\newtcblisting{bashlisting}{%
  colback=Honeydew, colframe=Green,
  listing only, listing options={language=bash},
  fontupper=\ttfamily\small
}

% Boxes to indicate changes
% \RequirePackage{marginnote}
\newtcbox{\ADOC@new}{on line, size=minimal, sharp corners,
  colback=LightPink, colframe=DarkOliveGreen,
  boxrule=0pt, toprule=1pt, bottomrule=1pt}
\newtcbox{\ADOC@old}{on line, size=minimal, sharp corners,
  colback=Gainsboro, colframe=DarkSlateGrey,
  boxrule=0pt, toprule=1pt, bottomrule=1pt}
\newcommand{\ADOCnew}[1]{%
  \par\noindent\hspace*{-2em}%
  \ADOC@new{\normalsize N: #1}%
}
\newcommand{\ADOCold}[1]{%
  \par\noindent\hspace*{-2em}%
  \ADOC@old{\normalsize O: #1}%
}
